doctype html
html(lang="en")
  head
    title Landing Page
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
   h1 Books
   p
    a.button(href='/books/new') Create New Book
   table
    thead
     tr
      th Title
      th Author
      th Genre
      th Year
    tbody
     each book in books
      tr
       td
        a(href='/books/book_detail/' + book.id)=book.title
       td=book.author
       td=book.genre
       td=book.year